squada-one()
    font-family "Squada One"

.squada-one
    font-family "Squada One"

share()
    font-family "Share", sans

.share
    font-family "Share", sans

h1, h2, h3, h4 ,h5 ,h6, .h1, .h2, .h3, .h4, .h5, .h6
    margin-top 0

h1, h2, h3, h4, .h1, .h2, .h3, .h4
    squada-one()

p, span, li, label, span, input, textarea, a, button
    share()
    font-size 18px

h1, .h1
    font-size 56px

    @media (min-width: 768px)
        font-size 76px

h2, .h2
    font-size 48px

    @media (min-width: 768px)
        font-size 68px

h3, .h3
    font-size 47px

h4, .h4
    font-size 42px

h5, .h5
    font-size 29px

h6, .h6
    font-size 26px

.invert-shadow
    color $agentOrange
    text-shadow 2px 2px $white
