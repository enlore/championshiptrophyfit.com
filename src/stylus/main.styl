$tablet = "@media (min-width: 768px)"
$medium = "@media (min-width: 992px)"
$large = "@media (min-width: 1200px)"

$black = #050000
$main-bg = $black

$white = #fefefe
$body-fg = $white

$agentOrange = #FF4001

@import 'fonts'
@import 'round_eye'
@import 'chimp_form'

html
    font-size 18px

body
    background-color $main-bg
    color $body-fg

.masthead
    width 100%

    height 321px

    @media (min-width: 1200px)
        height 450px
        //background-position center -300px
        background-size cover

    background-image url('/img/masthead_bg.jpg')
    background-repeat no-repeat

section-padding($pad=4rem)
    padding-top $pad
    padding-bottom $pad

section
    section-padding()

.steve-bg-region
    background-image url('//placehold.it/1500x1500&text=Big Ol Pic of Steven')
    background-repeat no-repeat
    background-position center
    background-attachment fixed

.video
    section-padding(1em)
    iframe
        display block
        width 800px
        height 600px

footer
    section-padding()
