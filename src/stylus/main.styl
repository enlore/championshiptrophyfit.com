$tablet = "@media (min-width: 768px)"
$medium = "@media (min-width: 992px)"
$large = "@media (min-width: 1200px)"

$black = #050000
$main-bg = $black

$white = #fefefe
$body-fg = $white

$agentOrange = #FF4001
$blue = #103741

$pewter = #103741

@import 'fonts'
@import 'round_eye'
@import 'chimp_form'
@import 'nav'

a:hover,
a:active
    color $blue !important

ul, ol
    list-style none
    padding 0

html
    font-size 18px

body
    background-color $main-bg
    color $body-fg

.body-wrap
    border-top 10px solid $agentOrange

.masthead
    width 100%

    height 321px
    background-position center center

    @media (min-width: 1200px)
        height 450px
        //background-position center -300px
        background-size cover

    background-image url('/img/masthead_bg.jpg')
    background-repeat no-repeat

section-padding($pad=4rem)
    padding-top $pad
    padding-bottom $pad

section
    section-padding()

.contact-cta
    color $white
    display block
    margin-top 3rem
    font-size 38px

    &:hover, &:active
        color $white
        text-decoration none

/* push the next chunk of copy away since the p is wrapped
   up in decorative divs
 */
.long-form-pitch
    overflow hidden

    .row
        margin-top 2rem

.concrete-bg
    background-image url("/img/concrete_bg.jpg")

.skew-me
    position relative
    z-index 0

    p
        z-index 1

    .skew-you
        background-image url('/img/scanline.png')
        background-repeat repeat
        background-color $agentOrange
        width 100%
        height 100%
        top 0
        position absolute
        z-index -1

    .skew-you.left
        left -20rem

    .skew-you.right
        right -20rem

.pad-me
    padding 2rem

.orange-pinstripe-bg
    background-image url('/img/scanline.png')
    background-repeat repeat
    background-color $agentOrange

.steve-bg-region
    background-image url('//placehold.it/1500x1500&text=Big Ol Pic of Steven')
    background-repeat no-repeat
    background-position center
    background-attachment fixed

.video
    section-padding(1em)
    iframe
        display block
        width 800px
        height 600px

$footer-border = $black
$footer-bg = $agentOrange

footer
    section-padding()
    background-image url('/img/scanline.png')
    background-repeat repeat
    background-color $footer-bg
    border-bottom 7px solid $footer-border

    ul li a
        color $black
        background-color $agentOrange

    .shift-me
        text-align center

        @media (min-width: 768px)
            text-align right
