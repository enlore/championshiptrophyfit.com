$tablet = "@media (min-width: 768px)"
$medium = "@media (min-width: 992px)"
$large = "@media (min-width: 1200px)"

$black = #050000
$main-bg = $black

$white = #fefefe
$body-fg = $white

$agentOrange = #FF4001
$blue = #103741

@import 'fonts'
@import 'round_eye'
@import 'chimp_form'
@import 'nav'

a:hover,
a:active
    color $blue !important

ul, ol
    list-style none
    padding 0

html
    font-size 18px

body
    background-color $main-bg
    color $body-fg

.body-wrap
    border-top 10px solid $agentOrange

.masthead
    width 100%

    height 321px
    background-position center center

    @media (min-width: 1200px)
        height 450px
        //background-position center -300px
        background-size cover

    background-image url('/img/masthead_bg.jpg')
    background-repeat no-repeat

section-padding($pad=4rem)
    padding-top $pad
    padding-bottom $pad

section
    section-padding()

.concrete-bg
    background-image url("/img/concrete_bg.jpg")

.steve-bg-region
    background-image url('//placehold.it/1500x1500&text=Big Ol Pic of Steven')
    background-repeat no-repeat
    background-position center
    background-attachment fixed

.video
    section-padding(1em)
    iframe
        display block
        width 800px
        height 600px

$footer-border = $black

$footer-bg = $agentOrange
footer
    section-padding()
    //background-image url('/img/footer_bg.jpg')
    background-image url('/img/scanline.png')
    background-repeat repeat
    background-color $footer-bg
    //background-size cover
    border-bottom 7px solid $footer-border

    a
        color $black
        background-color $agentOrange

    .shift-me
        text-align center

        @media (min-width: 768px)
            text-align right
