mixin roundEye(headline, copy, imgSrc, invert)
  - if (typeof invert === "undefined")
    - invert = false

  .round-eye(class=attributes.class)
    .round-eye-inner
      .round-eye-header
        - if (!invert)
          h2=headline

      .round-eye-body
        .img-wrap
          img.round-eye-img.img-responsive(src=imgSrc)

        - if (invert)
          h2= headline

        p= copy

      .round-eye-footer

